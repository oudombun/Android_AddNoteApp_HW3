<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animation.FadeOutActivity">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_back"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:onClick="gotoMain"
        android:background="@drawable/btn_back_style"/>
    <ImageView
        android:id="@+id/fi_pic1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/pic1"
        android:layout_margin="20dp"
        android:layout_below="@id/txtFadeOut"/>
    <ImageView
        android:id="@+id/fi_pic2"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:src="@drawable/pic2"
        android:layout_above="@id/txtFadeOut"/>
    <ImageView
        android:id="@+id/fi_pic3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/pic5"
        android:layout_margin="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtFadeOut"/>
    <ImageView
        android:id="@+id/fi_pic4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/pic4"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/txtFadeOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/spicy_rice"
        android:text="Fade Out"
        android:textColor="@color/colorAccent"
        android:textSize="70dp"/>
</RelativeLayout>